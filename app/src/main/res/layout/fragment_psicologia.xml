<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background">


    <ImageView
        android:id="@+id/psicologia_img"
        android:layout_width="322dp"
        android:layout_height="316dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/img_layout_psicologia"
        android:src="@drawable/img_psicologia" />

    <Button
        android:id="@+id/btnSeleccionarFecha"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:background="@color/purple_button"
        android:text="Seleccionar Fecha"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnSeleccionarHora"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/purple_button"
        android:text="Seleccionar Hora"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tvFechaHoraSeleccionada"
        android:text="Fecha y hora seleccionadas: "
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnGuardarCita"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/gray_save"
        android:textColor="@color/white"
        android:text="Guardar Cita" />
</LinearLayout>
