<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:gravity="center">

    <ImageView
        android:id="@+id/history_img"
        android:layout_width="322dp"
        android:layout_height="292dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/img_layout_history"
        android:src="@drawable/img_history" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historial de Citas"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <ListView
        android:id="@+id/listview_historial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/purple_button"
        android:dividerHeight="1dp"/>
</LinearLayout>
